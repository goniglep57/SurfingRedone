<Window x:Class="SurfingRedone.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurfingRedone"
        mc:Ignorable="d"
        Title="Login" Height="392" Width="424" FontSize="15" Background="Bisque"
        WindowStartupLocation="CenterScreen">
    <Border Background="Black"  CornerRadius="20" Margin="20">
        <StackPanel Margin="30" Background="Black">
            <Label Content="Login" HorizontalAlignment="Center" Foreground="WhiteSmoke" FontSize="45"></Label>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"></Label>
            <TextBox Name="tbxUserName" Background="DarkSlateGray" Foreground="White" FontSize="16"/>
            <Label Content="Password" Foreground="White"></Label>
            <TextBox Name="tbxPassword" Background="DarkSlateGray" Foreground="White" FontSize="16"></TextBox>
            <!--<PasswordBox Name="tbxPassword" Background="DarkSlateGray" Foreground="White" FontSize="16"></PasswordBox>-->
            <Button Name="btnSubmit" Content="Submit" Margin="60 10" Background="DarkSlateGray" Foreground="White" FontSize="16" Click="btnSubmit_Click"></Button>
        </StackPanel>
    </Border>
</Window>
